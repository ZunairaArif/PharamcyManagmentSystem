@model IEnumerable<PharmacyManagmentSystem.Models.product>

@{
    ViewBag.Title = "Index";
}

<h2>Product Supplied</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default btn-sm" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.productName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category.categoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.productName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category.categoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.productId }, new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("Details", "Details", new { id = item.productId }, new { @class = "btn btn-primary btn-sm" })
        </td>
    </tr>
}

</table>
