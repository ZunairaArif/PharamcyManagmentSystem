@model IEnumerable<PharmacyManagmentSystem.Models.supplier>

@{
    ViewBag.Title = "Index";
}

<h2>Supplier</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default btn-sm" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.supplierName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.supplierContactNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.supplierEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.manufecture)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.supplierName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.supplierContactNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.supplierEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.manufecture)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.supplierId }, new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("Details", "Details", new { id = item.supplierId }, new { @class = "btn btn-primary btn-sm" })
        </td>
    </tr>
}

</table>
